set gui=none
set ic
set visualbell
set hlsearch
set editor="notepad.exe"
set verbose=10

hi Hint z-index:5000; font-family:monospace; font-size:12px; letter-spacing:0.1em; color:#404040; background-color:#e0e0ff; outline-style:solid; outline-width:1px; outline-color:blue; padding:2px 4px; position:absolute;
set hintchars=hjklgfdsayuioptrewq

" ================ KEY BINDINGS ================

" New bindings or replacements

noremap ; :
noremap : ;

noremap j 3<C-e>
noremap k 3<C-y>
vnoremap j j
vnoremap k k
noremap J <C-d>
noremap K <C-u>

noremap d D
noremap D d
noremap <C-o> o + 
noremap <C-l> t + 
noremap ,b    o * 
noremap ,B    t * 

noremap b :buffer! 
noremap B :tabbar<CR>

noremap <C-u> <C-a>
noremap <C-d> <C-x>

noremap <C-a> <Ins><C-a><Ins>

inoremap <C-p> <Up>
inoremap <C-n> <Down>
inoremap <C-f> <Right>
inoremap <C-b> <Left>
cnoremap <C-f> <Right>
cnoremap <C-b> <Left>

" Disable inconvenient bindings

noremap <C-j> <Nop>
inoremap <C-j> <Nop>
cnoremap <C-j> <Nop>

cnoremap <C-p> <Nop>
cnoremap <C-n> <Nop>

noremap <C-x> <Nop>


" ============== PLUGIN SETTINGS ================

" plugin_loader.js
let g:plugin_loader_roots='~/.vimperator/vimperator-plugins ~/.vimperator/plugin-available/';
js <<EOM
liberator.globalVariables.plugin_loader_plugins = <>
    _libly
    caret-hint
    gmperator
    hatena-bookmark-search
    ime_controller
    pluginManager
</>.toString().split(/\s+/).filter(function(n) n);
EOM

let g:hatena_bookmark_suffix_array='true';
js <<EOM
liberator.globalVariables.hBookmark_shortcuts = {
    hintsAdd :     'Ba',  // default: 'c'
    hintsComment : 'Bc',  // default: 'C'
    add :          ['C'], // default: ['c']
    comment :      ['c'], // default: ['C']
};
if (typeof hBookmark != 'undefined') {
    liberator.loadScript(
        'chrome://hatenabookmark/content/vimperator/plugin/hatenabookmark.js',
         {__proto__: this}
    );
}
EOM

let g:ex_ime_mode='inactive';
let g:textarea_ime_mode='inactive';
